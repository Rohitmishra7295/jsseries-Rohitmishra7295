console.log("label")

let foo = 42; // foo is now a number
console.log(foo);

foo = "bar"; // foo is now a string
console.log(foo);

foo = true; // foo is now a boolean
console.log(foo);

console.log(42 / +0); // Infinity
console.log(42 / -0); // -Infinity
